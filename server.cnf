[req]
distinguished_name = req_distinguished_name
x509_extensions = v3_req
prompt = no

[req_distinguished_name]
C = IN
ST = Telangana
L = Hyderabad
O = MyRideSharingServer
CN = localhost  # Common Name (your server's hostname)

[v3_req]
subjectAltName = @alt_names

[alt_names]
IP.1 = 127.0.0.1  # IP address of the server
DNS.1 = localhost  # Local hostname
